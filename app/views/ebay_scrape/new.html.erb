<div class="jumbotron">
	<div class="row">
		<h1 class="text-center">Enter ebay search here</h1>
		<div class="col-md-4 col-md-offset-4">
			<%= form_for @ebay_scrape, url: ebay_scrape_index_path, method: :post do |f| %>
				<div class="input-group input-group-lg text-center">
					<%= f.text_field :search, class: 'form-control', placeholder: :search%>
				</div>
				<div class="actions text-center">
					<%= f.submit "Search", class: 'btn btn-lg btn-primary' %>
				</div>
			<% end %>
		</div>
	</div>
</div>
